                </magic:CssGradientSource>
            </magic:GradientView>
            <ContentPresenter />
        </Grid>
    </ControlTemplate>
      <DataTemplate x:DataType="models:UserDetails" x:Key="UserCardTemplate">
                            <yummy:PancakeView CornerRadius="30">
                                <Grid ColumnDefinitions="*,*" RowDefinitions="auto,*">
                                    <Image
                                        Grid.Row="0"
                                        Grid.RowSpan="2"
                                        Grid.Column="0"
                                        Grid.ColumnSpan="2"
                                        Aspect="AspectFill"
                                        Source="{Binding Avatar}" />
                                    <Label
                                        Margin="0,20"
                                        FontAttributes="Bold"
                                        FontSize="36"
                                        HorizontalOptions="End"
                                        Text="{Binding FirstName}"
                                        TextColor="White" />
                                    <Label
                                        Grid.Column="1"
                                        Margin="0,20"
                                        FontAttributes="Bold"
                                        FontSize="36"
                                        HorizontalOptions="Start"
                                        Text="{Binding LastName}"
                                        TextColor="White" />
                                    <Frame
                                        x:Name="LikeFrame"
                                        Grid.Row="1"
                                        Padding="20,10"
                                        BackgroundColor="Transparent"
                                        BorderColor="White"
                                        CornerRadius="20"
                                        HorizontalOptions="Center"
                                        Opacity="0"
                                        Rotation="-20"
                                        VerticalOptions="Start">
                                        <Label
                                            x:Name="LikeText"
                                            BackgroundColor="Transparent"
                                            FontSize="32"
                                            HorizontalTextAlignment="Center"
                                            Text="LIKE"
                                            TextColor="Red"
                                            VerticalOptions="CenterAndExpand"
                                            VerticalTextAlignment="Center" />
                                    </Frame>
                                    <Frame
                                        x:Name="NopeFrame"
                                        Grid.Row="1"
                                        Grid.Column="1"
                                        Padding="20,10"
                                        BackgroundColor="Transparent"
                                        BorderColor="Red"
                                        CornerRadius="20"
                                        HorizontalOptions="Center"
                                        Opacity="0"
                                        Rotation="20"
                                        VerticalOptions="Start">
                                        <Label
                                            BackgroundColor="Transparent"
                                            FontSize="32"
                                            HorizontalTextAlignment="Center"
                                            Text="NOPE"
                                            TextColor="White"
                                            VerticalOptions="CenterAndExpand"
                                            VerticalTextAlignment="Center" />
                                    </Frame>
                                </Grid>
                            </yummy:PancakeView>
                        </DataTemplate>
    <DataTemplate x:DataType="models:UserDetails" x:Key="UserExpanderTemplate">
                            <Expander
                                Margin="5"
                                CollapseAnimationEasing="{x:Static Easing.CubicOut}"
                                CollapseAnimationLength="500"
                                ExpandAnimationEasing="{x:Static Easing.CubicIn}"
                                ExpandAnimationLength="500">
                                <Expander.Header>
                                    <Grid ColumnDefinitions="auto,*" RowDefinitions="auto,*">
                                        <Image
                                            Grid.RowSpan="2"
                                            HeightRequest="50"
                                            Source="{Binding Avatar}"
                                            WidthRequest="50">
                                            <Image.Clip>
                                                <EllipseGeometry
                                                    Center="25,25"
                                                    RadiusX="20"
                                                    RadiusY="20" />
                                            </Image.Clip>
                                        </Image>
                                        <Label Grid.Column="1">
                                            <Label.FormattedText>
                                                <FormattedString>
                                                    <Span FontAttributes="Bold" Text="{Binding FirstName}" />
                                                    <Span Text=" " />
                                                    <Span FontAttributes="Bold" Text="{Binding LastName}" />
                                                </FormattedString>
                                            </Label.FormattedText>
                                        </Label>
                                        <Label
                                            Grid.Row="1"
                                            Grid.Column="1"
                                            FontAttributes="Bold"
                                            FontSize="Small"
                                            Text="{Binding Email}"
                                            TextColor="Gray"
                                            VerticalTextAlignment="Start" />
                                    </Grid>
                                </Expander.Header>
                                <Expander.ContentTemplate>
                                    <DataTemplate>
                                        <Grid Padding="10">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>
                                            <Image
                                                Aspect="AspectFill"
                                                HeightRequest="120"
                                                Source="{Binding Avatar}"
                                                WidthRequest="120">
                                                <Image.Clip>
                                                    <EllipseGeometry
                                                        Center="60,60"
                                                        RadiusX="80"
                                                        RadiusY="80" />
                                                </Image.Clip>
                                            </Image>
                                            <Label
                                                Grid.Column="1"
                                                FontAttributes="Italic"
                                                LineBreakMode="TailTruncation"
                                                MaxLines="5"
                                                Text="{Binding Details}" />
                                        </Grid>
                                    </DataTemplate>
                                </Expander.ContentTemplate>
                            </Expander>
                        </DataTemplate>
</ResourceDictionary>
